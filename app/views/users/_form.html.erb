<% if @user.persisted? %>
  <% url = user_url(@user) %>
  <% button_val = "Update #{@user.username}" %>
<% else %>
  <% url = users_url %>
  <% button_val = "Submit" %>
<% end %>
<div class="container">
  <div class="col-md-3"></div>
  <form action="<%= url %>" class="form-horizontal auth-control col-md-6" method="POST">
    <div class="form-group">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    </div>
    <% if @user.persisted? %>
      <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <div class="form-group" style="margin-top: 15px">
      <label for="username_field" class="col-md-2 control-label">Username:</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="username_field" name="user[username]" value="<%= @user.username %>" placeholder="john_doe">
      </div>
    </div>
    <div class="form-group">
      <label for="email_field" class="col-md-2 control-label">Email:</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="email_field" name="user[email]" value="<%= @user.email %>" placeholder="johndoe@example.com">
      </div>
    </div>
    <% unless @user.persisted? %>
      <div class="form-group">
        <label for="password_field" class="col-md-2 control-label">Password:</label>
        <div class="col-md-10">
          <input type="password" class="form-control" id="password_field" name="user[password]" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-10">
          <input type="password" class="form-control" id ="passwordConfirm_field" name="user[passwordConfirm]" placeholder="Confirm Password">
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <input type="submit" class="form-control" value="<%= button_val %>">
      </div>
    </div>
  </form>
  <div class="col-md-3"></div>
</div>
