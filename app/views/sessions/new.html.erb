<h1>Log In</h1>
<div class="container">
  <div class="col-md-3"></div>
    <form action="<%= session_url %>" class="form-horizontal col-md-6 auth-control" method="POST">
    <div class="form-group"><%= csrf_input %></div>
    <div class="form-group" style="margin-top: 15px">
      <label for="email_field" class="col-md-2 control-label">Email: </label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="email_field" name="user[email]" value="<%= @user.email %>" placeholder="johndoe@gmail.com">
      </div>
    </div>
    <div class="form-group">
      <label for="password_field" class="col-md-2 control-label">Password: </label>
      <div class="col-md-10">
        <input type="password" class="form-control" id="password_field" name="user[password]" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <input type="submit" class="form-control" value="Log in">
      </div>
    </div>
  </form>
  <div class="col-md-3"></div>
</div>
