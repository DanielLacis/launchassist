<h1 class="page-title">Log In</h1>
<div class="container">
  <div class="col-md-3"></div>
    <form action="<%= session_url %>" class="form-horizontal col-md-6 auth-control" method="POST">
    <div class="form-group">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    </div>
    <div class="form-group" style="margin-top: 15px">
      <label for="email_field" class="col-md-2 control-label">Email: </label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="email_field" name="user[email]" value="<%= @user.email %>" placeholder="johndoe@example.com">
      </div>
    </div>
    <div class="form-group">
      <label for="password_field" class="col-md-2 control-label">Password: </label>
      <div class="col-md-10">
        <input type="password" class="form-control" id="password_field" name="user[password]" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <input type="submit" class="form-control" value="Log in">
      </div>
    </div>
  </form>
  <div class="col-md-3"></div>
</div>
<div class="container">
  <div class="col-md-3"></div>
  <form action="<%= session_url %>" class="form-horizontal col-md-6" method="POST" style="margin-top: 15px">
    <div class="form-group hidden-form">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    </div>
    <div class="form_group hidden-form">
      <input type="hidden" name="user[email]" value="Guest@gmail.com">
    </div>
    <div class="form-group hidden-form">
      <input type="hidden" name="user[password]" value="password">
    </div>
    <div class="form-group">
      <button class="form-control">Log in as Guest</button>
  </form>
  <div class="col-md-3"></div>
</div>
