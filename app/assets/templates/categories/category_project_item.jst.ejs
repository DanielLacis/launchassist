<div class="project-index-image col-md-4" style="background: url(<%= project.escape('main_photo_url') %>) 50% 50% no-repeat">
</div>
<div class="project-info col-md-5">
  <h1 class="project-index-title"><%= project.escape('title') %></h1>
  <p class="body-text-alt"><%= project.escape('description') %></p>
</div>
<div class="project-stats col-md-3">
  <h3 class="stat-title">Backers</h3>
  <p class="stat-text"><%= project.escape('numPledges') %> people backing this project</p>
  <h3 class="stat-title">Progress</h3>
  <p class="stat-text"><%= Math.floor(project.escape('amtPledged') / project.escape('goal') * 100) %>% of goal pledged</p>
  <h3 class="stat-title">Timeframe</h3>
  <p class="stat-text">Project ends in <%= project.escape('time_remaining') %></p>
  <% if (currentUser.get('id') === project.get('user_id')) { %>
    <button type="button" class="btn btn-primary project-edit">Edit Project</button>
  <% } %>
</div>
