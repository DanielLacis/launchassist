<div class="modal fade" id="new-tier" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="new-tier-title">New Tier</h4>
      </div>
      <div class="modal-body">
        <form id="new-tier-form">
          <div class="form-group">
            <label for="new-tier-amount">Tier Amount:</label>
            <input type="text" name="amount" id="new-tier-amount" class="tier-amount-input">
          </div>
          <div class="form-group">
            <label for="new-tier-rewards">Rewards:</label>
            <input type="text" name="rewards" id="new-tier-rewards" class="tier-rewards-input">
          </div>
          <div class="form-group">
              <label for="tier-delivery-date">Project End Date</label>
              <div class='input-group date' id='add-tier-delivery-date'>
                <input type='text' class="form-control" name="delivery_date" id="tier-delivery-date" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#add-tier-delivery-date').datetimepicker({minDate: moment()});
            });
          </script>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="tier-submit" data-dismiss="modal">Add Tier</button>
      </div>
    </div>
  </div>
</div>
