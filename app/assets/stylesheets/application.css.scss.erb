@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap-datetimepicker";
h1, h3 {
  margin-top: 10px;
}

body {
  padding-top: 70px;
  width: 100%;
  background-image:
  url("https://s3.amazonaws.com/launchassistdev/pillars-of-creation-small.jpg");
  background-size: cover;
  background-repeat: no-repeat;
}

.auth-control {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 5px;
  border: 1px solid white;
}

.hidden-form {
  padding: 0;
  margin: 0;
}

// div.category-padding {
//   padding: 0px;
// }

div.category {
  padding: 5px;
  overflow: hidden;
}

div.categories {
  height: 500px;
}

.category-index-title {
  color: #FEF9ED;
  position: relative;
  text-align: center;
  font-size: 24pt;
  z-index: 1;
}

.project-index-title {
  color: black;
  text-align: center;
  font-size: 20pt;
}

h1.page-title {
  text-align:center;
  font-size: 48pt;
  color: #FEF9ED;
}

p.body-text {
  font-size: 18pt;
  color: #FEF9ED;
}

p.body-text-alt {
  font-size: 18pt;
  color: black;
}

img.category-image-index {
  width: 100%;
  height: 100%;
}

img.category-image-show {
  height: 300px;
  border-radius: 5px;
  border: 1px solid black;
}

h3.stat-title {
  color: black;
  font-size: 16pt;
}

p.stat-text {
  color: black;
  font-size: 12pt;
}


div.project {
  background-color: rgba(255, 255, 255, 0.7);
  padding: 15px;
  border-radius: 5px;
  margin: 15px;
  border: 1px solid black;
}

#nav-bg {
  background-color: rgba(100, 149, 237, 0.93);
  border-bottom: 1px solid rgba(100, 149, 237, 1);
}

a.nav-text {
  color: #FEF9ED;
  font-size: 12pt;
}

.navbar-default .navbar-nav > li > a {
  color: #FEF9ED;
}

.navbar-default .navbar-nav > li > a:focus {
  background-color: rgba(0, 0, 0, 0);
  color: #FEF9ED;

}

.navbar-default .navbar-nav > li > a:hover,{
  background-color: royalblue;
  color: #FEF9ED;
}


div.project-tier-item {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 5px;
  margin-bottom: 5px;
  padding-left: 10px;
  border: 1px solid black;
}

div.project-show-item {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 5px;
  border: 1px solid black;
}

div.project-show-img {
  margin: 15px 0px;
  padding: 0;
}

div.project-show-img:hover:after {
  border-radius: 5px;
  content: "";
  display: block;
  position: absolute;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.3);
}

div.project-show-stats {
  margin: 10px 0px;
}

div.project-index-image {
  width: 300px;
  height: 300px;
  border-radius: 5px;
}

div.project-index-image:hover {
  cursor: pointer
}

div.project-edit {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 5px;
  border: 1px solid black;
}

div.edit-form {
  margin: 10px 0px
}

form#edit-project {
  margin: 10px 0px;
}

div.project-tier-item-pledged {
  background-color: cornflowerblue;
}

