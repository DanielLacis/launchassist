@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap-datetimepicker";
h1, h3 {
  margin-top: 10px;
}

body {
  padding-top: 70px;
  width: 100%;
  background-image: url("https://s3.amazonaws.com/launchassist/category-images/background-main-moon-earth.jpg");
  background-size: cover;
  background-repeat: no-repeat;
}

.auth-control {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 15px;
  border: 1px solid white;
}

.hidden-form {
  padding: 0;
  margin: 0;
}

div.category {
  width: 23%;
  margin: 0 10px;
  height: 100%;
  float: left;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 5px;
  border: 1px solid black;
}

div.categories {
  height: 500px;
}

div.categories:after {
  content: "";
  clear: both;
  display: block;
}

.category-index-title {
  color: #FEF9ED;
  text-align: center;
  font-size: 24pt;
}

.project-index-title {
  color: black;
  text-align: center;
  font-size: 20pt;
}

h1.page-title {
  text-align:center;
  font-size: 48pt;
  color: #FEF9ED;
}

p.body-text {
  font-size: 18pt;
  color: #FEF9ED;
}

p.body-text-alt {
  font-size: 18pt;
  color: black;
}

img.category-image-index {
  width: 100%;
  height: 100%;
}

img.category-image-show {
  height: 300px;
  border-radius: 5px;
  border: 1px solid black;
}

h3.stat-title {
  color: black;
  font-size: 16pt;
}

p.stat-text {
  color: black;
  font-size: 12pt;
}


div.project {
  background-color: rgba(255, 255, 255, 0.7);
  padding: 15px;
  border-radius: 15px;
  margin: 15px;
  border: 1px solid black;
}

#nav-bg {
  background-color: rgba(100, 149, 237, 0.93);
  border-bottom: 1px solid rgba(100, 149, 237, 1);
}

a.nav-text {
  color: #FEF9ED;
  font-size: 12pt;
}

.navbar-default .navbar-nav > li > a {
  color: #FEF9ED;
}

.navbar-default .navbar-nav > li > a:focus {
  background-color: rgba(0, 0, 0, 0);
  color: #FEF9ED;

}

.navbar-default .navbar-nav > li > a:hover,{
  background-color: royalblue;
  color: #FEF9ED;
}


div.project-tier-item {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 15px;
  margin-bottom: 5px;
  padding-left: 10px;
  border: 1px solid black;
}

div.project-show-item {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 15px;
  border: 1px solid black;
}

div.project-show-img {
  margin: 15px 0px;
}

div.project-show-stats {
  margin-top: 10px
}

div.project-index-image {
  width: 300px;
  height: 300px;
}
