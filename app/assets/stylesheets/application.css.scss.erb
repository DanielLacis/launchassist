img.category-index-item-image {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  border: 1px solid black;
  cursor: pointer;
}

div.project-tier-item {
  cursor: pointer;
}

div.project-comment-item {
  margin: 10px;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 5px;
  padding: 15px;
}

div.project-show {
  min-height: 1400px;
}

